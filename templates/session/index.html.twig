{% extends 'base.html.twig' %}

{% block title %}Registre des sessions{% endblock %}

{% block body %}
<h3>Registre des sessions</h3>
{% for session in sessions %}
    <a class="btn btn-sm btn-outline-light" href="{{ path('show_session', {'id': session.id}) }}">{{ session }}</a>
    <a href="{{ path('delete_session', {'id': session.id}) }}"><i class="fa-solid fa-trash-can-arrow-up"></i></a>
    <a href="{{ path('edit_session', {'id': session.id})}}"><i class="fa-solid fa-pen-to-square"></i></a>
    </br>
{% endfor %}
<p>
    <a class="btn btn-sm btn-outline-dark" href="{{path('add_session')}}">Ajouter une session</a>
</p>
{% endblock %}
